# =============================================================================
# PACIFICA TRADING BOT ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your actual values

# =============================================================================
# PACIFICA API CREDENTIALS
# =============================================================================
# Your Solana wallet private key (base58 encoded)
# Get this from your Solana wallet (Phantom, Solflare, etc.)
PACIFICA_PRIVATE_KEY=your_base58_private_key_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Trading intervals (seconds)
MIN_TRADE_INTERVAL=30
MAX_TRADE_INTERVAL=300

# Risk management
MAX_DAILY_TRADES=50
ENABLE_RISK_LIMITS=true

# Default slippage percentage for market orders
DEFAULT_SLIPPAGE=0.5

# Order timeout (seconds)
ORDER_TIMEOUT=30

# =============================================================================
# POSITION SIZING - PERCENTAGE BASED
# =============================================================================
# Your account balance for percentage calculations
ACCOUNT_BALANCE=500.0

# Position size as percentage of account balance (risk per trade)
MIN_POSITION_PERCENT=50.0
MAX_POSITION_PERCENT=80.0

# =============================================================================
# POSITION MANAGEMENT - DYNAMIC HOLD TIMES
# =============================================================================
# Dynamic random hold time range (minutes) - bot picks random time between min/max
MIN_POSITION_HOLD_MINUTES=3
MAX_POSITION_HOLD_MINUTES=10

# Logging and timing configuration
POSITION_LOG_INTERVAL_SECONDS=120  # Log position status every 2 minutes (120 seconds)
MIN_WAIT_BETWEEN_POSITIONS=10      # Minimum wait between positions (seconds)
MAX_WAIT_BETWEEN_POSITIONS=50      # Maximum wait between positions (seconds)

# Startup configuration
CLOSE_EXISTING_POSITIONS_ON_START=true  # Close any existing positions before starting trading

# Legacy support (deprecated - use MIN/MAX above instead)
POSITION_HOLD_MINUTES=0  # 0 = use dynamic system above

# Only hold one position at a time
SINGLE_POSITION_MODE=true

# =============================================================================
# PROXY CONFIGURATION (MANDATORY)
# =============================================================================
# Proxy is REQUIRED for this bot - always set to true
USE_PROXY=true

# REQUIRED: Proxy URL with authentication
# Format: http://username:password@host:port
PROXY_URL=http://username:password@proxy.example.com:8080

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log to file
LOG_TO_FILE=true
LOG_FILE=pacifica_trading_bot.log

# =============================================================================
# MARGIN AND LEVERAGE
# =============================================================================
# Margin mode (0 = cross, 1 = isolated)
MARGIN_MODE=0
